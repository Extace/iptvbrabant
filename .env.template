# Nhost Configuration
NHOST_SUBDOMAIN=your-subdomain
NHOST_REGION=eu-central-1
NHOST_PAT=your-personal-access-token

# Hasura Configuration  
HASURA_GRAPHQL_ADMIN_SECRET=your-admin-secret
HASURA_GRAPHQL_ENDPOINT=https://your-subdomain.hasura.eu-central-1.nhost.run/v1

# Application Configuration
CLIENT_URL=http://localhost:3000

# SMTP Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false
SMTP_METHOD=LOGIN
SMTP_SENDER=noreply@yourdomain.com

# Development
NODE_ENV=development